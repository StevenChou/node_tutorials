mixin storeForm(store = {})
    form(action=`/add/${store.id || ''}` method="POST" class="card")
        label(for="name") name
        input(type="text" name="name" value=store.name)
        label(for="description") description
        textarea(name="description")= store.description
        - const choices = ['Wifi', 'Open Late', 'Family Friendly','Vegatarian', 'Licensed'];
        - const tags = store.tags || [];
        ul.tags
            each choice in choices
                .tag.tag__choice
                    input(type="checkbox" id=choice value=choice name="tags" checked=(
                    tags.includes(choice)))
                    label(for=choice) #{choice}
        input(type="submit" value="save â†’" class="button")
